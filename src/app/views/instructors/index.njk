{% extends "layout.njk" %}

{% block content %}
   <div class="card table-container">

      <div class="header">
         
         <a href="/instructors/create" class="button">Novo</a> 

         <form action="/instructors" method="get">
            <input type="text" name="filter" placeholder="Nome ou Atendimento" value={{filter}} />
            <button type="submit">Filtrar</button>
         </form>

      </div>

      <table width="100%">
         <thead>
            <tr>
               <th></th>
               <th>Instructor</th>
               <th>Atendimento</th>
               <th>Total Alunos</th>
               <th>Ação</th>   
            </tr>
         </thead>
         <tbody>
            {% for instructor in instructors %}
            <tr>
               <td><span style="background-image: url({{ instructor.avatar_url }})"></span></td>
               <td>{{instructor.name}}</td>
               <td>{{instructor.services}}</td>
               <td>{{instructor.total_students}}</td>
               <td><a href="/instructors/{{instructor.id}}">Ver</a></td>
            </tr>
            {% endfor %}
         </tbody>
      </table>
   </div>
{% endblock content %}
    